<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAlpha</item>
        <item name="colorPrimaryDark">@color/colorAlpha</item>
        <item name="colorAccent">@color/colorcolorSecondaryDark</item>
    </style>

    <style name="EchoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorcolorSecondaryDark</item>
    </style>

    <style name="AlphaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAlpha</item>
        <item name="colorPrimaryDark">@color/colorAlpha</item>
        <item name="colorAccent">@color/colorcolorSecondaryDark</item>
    </style>

</resources>
